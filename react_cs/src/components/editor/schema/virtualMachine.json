{
  "$id": "https://cs.com/schemas/hardware",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for VM",
  "type": "object",
  "properties": {
    "credentials": {
      "type": "object",
      "properties": {
        "string_field": {
          "type": "string",
          "default": "Default String"
        },
        "integer_field": {
          "type": "integer"
        },
        "number_field": {
          "type": "number"
        },
        "array_field": {
          "type": "array"
        },
        "boolean_field": {
          "type": "boolean"
        },
        "date_field": {
          "type": "string",
          "format": "date"
        },
        "select_field": {
          "type": "string",
          "default": "AWS",
          "options" : [[1, "AWS"], [2, "Azure"], [3, "GCP"], [4, "Digital Ocean"]]
        },
        "object_field": {
          "type": "object",
          "properties": {
            "inner_string_field": {
              "type": "string",
              "default": "Default Inner String"
            },
            "inner_integer_field": {
              "type": "integer",
              "default": 1
            },
            "inner_number_field": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "string_field",
        "integer_field",
        "number_field",
        "array_field",
        "boolean_field",
        "date_field",
        "select_field"
      ]
    }
  },
  "required": [
    "credentials"
  ]
}